generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum UserRole {
  Admin
  Student
}
model User {
  id       Int     @id @default(autoincrement())
  nom String
    prenom String
telephone String?
  email    String @unique
  password String
  classe String?
  naissance String?
  lieux String?
    role UserRole @default(Student)

}